<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    android:padding="20dp">

    <!-- Illustration Image -->

    <!-- Title Text -->
    <ImageView
        android:id="@+id/illustrationImage"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="Illustration of a safe road journey"
        android:scaleType="fitCenter"
        android:src="@drawable/road_interface" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Smart Road Crack Detection"
        android:textColor="#333333"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Subtitle / Tagline -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a safe Path"
        android:textColor="#666666"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="5dp" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"

        />

    <!-- Create Account Button -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Home Button -->
    </RelativeLayout>

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="CREATE ACCOUNT"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="#666666"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/goToHomeButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:padding="3dp"
        android:text="GO HOME"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
